# ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Git aliases
alias g='git'

# Kill Konsole
alias kk='killall konsole'

# Neovim aliases
alias nv='nvim'
alias nvw='nvim .'

# Tmux aliases
alias t='tmux'
alias tsrc="tmux source-file $HOME/.tmux.conf"
alias tdev="tmux new-session -s dev 'nvim .' \; split-window -l 15% \; || tmux attach-session -t dev"

# bat alias
alias bat='batcat'

# Reload zsh
alias src="source $HOME/.zshrc"

